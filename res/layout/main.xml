<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/de.ub0r.android.callMeterNG"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:paddingTop="10sp"
	android:paddingLeft="10sp"
	android:paddingRight="10sp"
>

	<TextView
		android:id="@+id/billdate_"
		android:text="@string/billdate_"
		android:paddingBottom="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_month_"
		android:text="@string/out_month_"
		android:layout_below="@id/billdate_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_month_"
		android:text="@string/in_month_"
		android:layout_below="@id/out_month_"
		android:paddingBottom="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_"
		android:text="@string/out_"
		android:layout_below="@id/in_month_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_"
		android:text="@string/in_"
		android:layout_below="@id/out_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>

	<TextView
		android:id="@+id/billdate"
		android:layout_alignTop="@id/billdate_"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_month"
		android:layout_alignTop="@id/out_month_"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_month"
		android:layout_alignTop="@id/in_month_"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out"
		android:layout_alignTop="@id/out_"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in"
		android:layout_alignTop="@id/in_"
		android:layout_alignParentRight="true"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	
	<!-- Place an AdMob ad at the bottom of the screen. -->
	<!-- It has white text on a black background. -->
	<!-- The description of the surrounding context is 'Android game'. -->
	<com.admob.android.ads.AdView
		android:id="@+id/ad"
		android:visibility="gone"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
	 
	 	app:backgroundColor="#000000"
		app:textColor="#FFFFFF"
		app:keywords="Android market app report calls game"
	/>
	<!-- We could append app:testing="true" above to always get the test ad back -->
</RelativeLayout>
