<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
>

	<TextView
		android:id="@+id/billdate_"
		android:text="@string/billdate_"
		android:paddingBottom="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_month_"
		android:text="@string/out_month_"
		android:layout_below="@id/billdate_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_month_"
		android:text="@string/in_month_"
		android:layout_below="@id/out_month_"
		android:paddingBottom="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_"
		android:text="@string/out_"
		android:layout_below="@id/in_month_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_"
		android:text="@string/in_"
		android:layout_below="@id/out_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>

	<TextView
		android:id="@+id/billdate"
		android:layout_toRightOf="@id/billdate_"
		android:layout_alignTop="@id/billdate_"
		android:paddingLeft="10sp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out_month"
		android:layout_alignRight="@id/billdate"
		android:layout_alignTop="@id/out_month_"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in_month"
		android:layout_alignTop="@id/in_month_"
		android:layout_alignRight="@id/billdate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/out"
		android:layout_alignTop="@id/out_"
		android:layout_alignRight="@id/billdate"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
	<TextView
		android:id="@+id/in"
		android:layout_alignTop="@id/in_"
		android:layout_alignRight="@id/billdate"
		android:text="..."
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	/>
</RelativeLayout>
