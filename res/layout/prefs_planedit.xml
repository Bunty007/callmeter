<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">

	<ScrollView android:layout_width="fill_parent"
		android:layout_height="1px" android:layout_weight="1"
		android:fillViewport="true">
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:text="@string/name_"
					android:layout_width="wrap_content" android:layout_height="fill_parent"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/name_et" android:layout_width="150dip"
					android:layout_height="wrap_content" />
				<Button android:id="@+id/name_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/shortname_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/shortname_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/shortname_et"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/shortname_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:orientation="horizontal">
				<TextView android:text="@string/type_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<Spinner android:id="@+id/type_sp" android:entries="@array/plans_type"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/type_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/billperiodid_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/billperiodid_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<Button android:id="@+id/billperiodid_btn"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/billperiodid_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/limit_type_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/limit_type_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<Spinner android:id="@+id/limit_type_sp" android:entries="@array/limit_type"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/limit_type_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/limit_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/limit_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/limit_et" android:layout_width="150dip"
					android:layout_height="wrap_content" />
				<Button android:id="@+id/limit_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/billperiod_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/billperiod_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<Spinner android:id="@+id/billperiod_sp" android:entries="@array/billperiod"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/billperiod_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/billmode_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:id="@+id/billmode_tw" android:text="@string/billmode_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<RelativeLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<Spinner android:id="@+id/billmode_sp" android:entries="@array/billmodes"
						android:layout_width="150dip" android:layout_height="wrap_content" />
					<EditText android:id="@+id/billmode_cust_1_et"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_below="@id/billmode_sp" android:layout_alignLeft="@id/billmode_sp" />
					<EditText android:id="@+id/billmode_cust_2_et"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_below="@id/billmode_sp" android:layout_alignRight="@id/billmode_sp" />
				</RelativeLayout>
				<Button android:id="@+id/billmode_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/billday_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/billday_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<Button android:id="@+id/billday_btn" android:layout_width="150dip"
					android:layout_height="wrap_content" />
				<Button android:id="@+id/billday_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/cost_per_plan_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/cost_per_plan_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/cost_per_plan_et"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/cost_per_plan_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/cost_per_item_in_limit_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/cost_per_item_in_limit_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/cost_per_item_in_limit_et"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/cost_per_item_in_limit_help"
					android:text="@string/help_" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/cost_per_item_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/cost_per_item_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<EditText android:id="@+id/cost_per_item_et"
					android:layout_width="150dip" android:layout_height="wrap_content" />
				<Button android:id="@+id/cost_per_item_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/cost_per_amount_in_limit_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/cost_per_amount_in_limit_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<RelativeLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<EditText android:id="@+id/cost_per_amount_in_limit_et"
						android:layout_width="150dip" android:layout_height="wrap_content" />
					<EditText android:id="@+id/cost_per_amount_in_limit_et1"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_alignLeft="@id/cost_per_amount_in_limit_et" />
					<EditText android:id="@+id/cost_per_amount_in_limit_et2"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_alignRight="@id/cost_per_amount_in_limit_et" />
				</RelativeLayout>
				<Button android:id="@+id/cost_per_amount_in_limit_help"
					android:text="@string/help_" android:layout_width="wrap_content"
					android:layout_height="wrap_content" />
			</LinearLayout>
			<LinearLayout android:id="@+id/cost_per_amount_layout"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView android:text="@string/cost_per_amount_"
					android:layout_width="wrap_content" android:layout_height="wrap_content"
					android:singleLine="false" android:gravity="center_vertical"
					android:layout_weight="1" />
				<RelativeLayout android:layout_width="wrap_content"
					android:layout_height="wrap_content">
					<EditText android:id="@+id/cost_per_amount_et"
						android:layout_width="150dip" android:layout_height="wrap_content" />
					<EditText android:id="@+id/cost_per_amount_et1"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_alignLeft="@id/cost_per_amount_et" />
					<EditText android:id="@+id/cost_per_amount_et2"
						android:layout_width="75dip" android:layout_height="wrap_content"
						android:layout_alignRight="@id/cost_per_amount_et" />
				</RelativeLayout>
				<Button android:id="@+id/cost_per_amount_help" android:text="@string/help_"
					android:layout_width="wrap_content" android:layout_height="wrap_content" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>

	<LinearLayout android:id="@+id/ok_cancel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" style="@android:style/ButtonBar">
		<Button android:id="@+id/ok" android:text="@android:string/ok"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
		<Button android:id="@+id/cancel" android:text="@android:string/cancel"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="1" />
	</LinearLayout>
</LinearLayout>
